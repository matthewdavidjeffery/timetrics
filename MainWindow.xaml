<Window x:Class="Timetrics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timetrics"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Menu x:Name="menu" HorizontalAlignment="Stretch" Height="30" VerticalAlignment="Top" IsMainMenu="True">
            <MenuItem Command="{Binding File}" Height="20" Width="73" Header="_Main">
                <MenuItem Header="Change data source..."/>
                <MenuItem Header="Recent data sources">
                </MenuItem>
                <Separator/>
                <MenuItem Header="E_xit" Command="{Binding Path=CloseCommand}"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
